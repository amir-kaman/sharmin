{
  "branches": ["master"],
  "repositoryUrl": "https://github.com/amir-kaman/sharmin",
  "tagFormat": "core-v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "feat", "scope": "core", "release": "minor"},
          {"type": "fix", "scope": "core", "release": "patch"},
          {"type": "perf", "scope": "core", "release": "patch"},
          {"breaking": true, "scope": "core", "release": "major"},
          {"type": "feat", "scope": "*", "release": false},
          {"type": "fix", "scope": "*", "release": false}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "Features"},
            {"type": "fix", "section": "Bug Fixes"},
            {"type": "perf", "section": "Performance Improvements"},
            {"type": "docs", "section": "Documentation", "hidden": false}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "pkgRoot": "dist",
        "tarballDir": "../../release"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(core): release v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "../../release/*.tgz",
            "label": "Core Package"
          }
        ]
      }
    ]
  ]
}