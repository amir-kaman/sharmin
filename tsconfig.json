{
    "compilerOptions": {
      "jsx": "react",
      "target": "es5",
      "module": "commonjs",
      "outDir": "dist",
      "lib": ["es5", "es6", "es7", "es2017", "dom"],
      "allowJs": false,
      "moduleResolution": "node",
      "baseUrl": ".",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "typeRoots": ["./node_modules/@types"],
    "exclude": ["node_modules"],
  }