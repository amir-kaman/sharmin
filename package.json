{
  "name": "@amir-kaman/sharmin",
  "version": "0.0.0",
  "private": true,
  "description": "Sharmin Design System - A modern React component library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amir-kaman/sharmin.git"
  },
  "author": "Amir Kaman",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "clean": "pnpm run --recursive clean",
    "dev": "pnpm run --parallel dev",
    "storybook": "pnpm --filter storybook dev",
    "build-storybook": "pnpm --filter storybook build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.17",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
