{
  "name": "@amir-kaman/sharmin",
  "version": "0.0.0",
  "private": true,
  "description": "Sharmin Design System - A modern React component library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amir-kaman/sharmin.git"
  },
  "author": "Amir Kaman",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "clean": "pnpm run --recursive clean",
    "dev": "pnpm run --parallel dev",
    "storybook": "pnpm --filter storybook dev",
    "build-storybook": "pnpm --filter storybook build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^20.11.17",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.7",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
